<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        Title="XEngine" Height="450" Width="800">
	<Grid>
		<Label Content="XEngine Launcher" HorizontalAlignment="Left" Margin="53,54,0,0" VerticalAlignment="Top" FontSize="22"/>
		<Label HorizontalAlignment="Left" Margin="234,59,0,0" VerticalAlignment="Top">
			<Label x:Name="vers" Content="v 0.0.1" RenderTransformOrigin="0.504,0.637"/>
		</Label>
		<Button Content="Software renderer" HorizontalAlignment="Left" Margin="644,256,0,0" VerticalAlignment="Top" Width="115" Height="36" FontWeight="Bold" Click="Button_Click"/>
		<Button Content="OpenGL &amp; DX11" HorizontalAlignment="Left" Margin="644,297,0,0" VerticalAlignment="Top" Width="115" Height="37" FontWeight="Bold" Click="Button_Click_1"/>
		<Button Content="DX12" HorizontalAlignment="Left" Margin="644,339,0,0" Width="115" Height="36" FontWeight="Bold" VerticalAlignment="Top" VerticalContentAlignment="Center" Click="Button_Click_2"/>
		<Image x:Name="ImageLogo" HorizontalAlignment="Left" Height="275" Margin="234,100,0,0" VerticalAlignment="Top" Width="236" Source="E:/Fenix/XengineLogo.jpg"/>

	</Grid>
</Window>
